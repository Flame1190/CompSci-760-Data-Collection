{
    "name": "ENSS",
    "n_gpu": 2,
    "globals": {
        "scale_factor": 4
    },
    "arch": {
        "type": "ENSS",
        "args": {
            "f": 64,
            "m": 5
        }
    },
    "data_loader": {
        "type": "SupersamplingDataLoader",
        "args":{
            "data_dirs": [
                "data/spaceship_clip_2_left",
                "data/Clip_2/left",
                "data/Clip_0/right",
                "data/Clip_1/left"
            ],
            "batch_size": 8,
            "shuffle": true,
            
            "num_workers": 4,
            "color_dirname": "color/",
            "depth_dirname": "depth/",
            "motion_dirname": "motion/",
            
	        "output_dimensions": [1200, 1200],
            "num_frames": 16,
            "drop_frames": 8
        }
    },
    "valid_data_loader": {
        "type": "SupersamplingDataLoader",
        "args":{
            "data_dirs": [
                "data/Clip_0/left"
            ],
            "batch_size": 8,
            "shuffle": true,
            
            "num_workers": 4,
            "color_dirname": "color/",
            "depth_dirname": "depth/",
            "motion_dirname": "motion/",
            
	        "output_dimensions": [1200, 1200],
            "num_frames": 16,
            "drop_frames": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001, 
            "weight_decay": 0.000001,
            "amsgrad": true
        }
    },
    "metrics": [
        "psnr","ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 120,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 30,
        "args": {
            "batch_split_size": 8,
            "method": "enss",
            "use_prev_high_res": false
        },
        "tensorboard": false
    }
}