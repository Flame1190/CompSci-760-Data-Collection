{
    "name": "NSRR",
    "n_gpu": 1,
    "globals": {
        "scale_factor": 4
    },
    "arch": {
        "type": "NSRR",
        "args": {
            "num_frames": 5,
            "use_ycbcr": true
        }
    },
    "data_loader": {
        "type": "SupersamplingDataLoader",
        "args":{
            "data_dirs": "data/spaceship_clip_2_left",
            "batch_size": 8,
            "shuffle": true,
            
            "num_workers": 4,
            "color_dirname": "color/",
            "depth_dirname": "depth/",
            "motion_dirname": "motion/",
            
	        "output_dimensions": [1200, 1200],
            "num_frames": 5
        }
    },
    "valid_data_loader": {
        "type": "SupersamplingDataLoader",
        "args":{
            "data_dirs": "data/spaceship_clip_2_left",
            "batch_size": 8,
            "shuffle": true,
            
            "num_workers": 4,
            "color_dirname": "color/",
            "depth_dirname": "depth/",
            "motion_dirname": "motion/",
            
            "num_data": 50,
	        "output_dimensions": [1200, 1200],
            "num_frames": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001, 
            "weight_decay": 0.00001,
            "amsgrad": true
        }
    },
    "metrics": [
        "psnr","ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "args": {
            "batch_split_size": 1,
            "method": "nsrr"
            
        },
        "tensorboard": false
    }
}