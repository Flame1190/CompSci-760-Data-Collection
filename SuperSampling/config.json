{
    "name": "NSRR",
    "n_gpu": 2,

    "arch": {
        "type": "NSRR",
        "args": {
            "scale_factor": 2,
            "num_frames": 5
        }
    },
    "data_loader": {
        "type": "NSRRDataLoader",
        "args":{
            "data_dir": "new",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "img_dirname": "color/",
            "depth_dirname": "depth/",
            "motion_dirname": "motion/",
            "downsample": 2,
	        "resize_factor": 1,
            "num_frames": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001, 
            "weight_decay": 0.00001,
            "amsgrad": true
        }
    },
    "loss": "nsrr_loss",
    "metrics": [
        "psnr","ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}